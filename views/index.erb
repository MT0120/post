<div>
  <table>
    <thead>
      <tr>
        <th>投稿</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post|%>
        <tr>
          <td><%= post.body %></td>
      <% if !current_user.nil? %>
      <% if current_user.viewer == false %>
       <td>
         <form action="/posts/<%= post.id %>/delete" method="post">
           <input type="submit" value="削除">
         </form>
       </td>
      <% end %>
      <% end %>
        </tr>
      <% end %>
      <% if !current_user.nil? %>
      <% if current_user.viewer == false %>
      <tr>
        <td colspan="7"><a href="/posts/new">新しい投稿</a></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>